// Required to be compatible with Node's experimental TypeScript support
{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "noEmit": true,
    "module": "NodeNext",
    "rewriteRelativeImportExtensions": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  }
}